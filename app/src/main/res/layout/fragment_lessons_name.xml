<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.lessons.LessonsNameFragment">

    <TextView
        android:id="@+id/text_view_name_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/text_view_name_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/text_view_name_score"
        android:text="1:00"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/image_view_chord"
        android:layout_width="252dp"
        android:layout_height="252dp"
        android:layout_below="@+id/text_view_name_score"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_chord"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/text_view_chord_1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@color/chordNeutral"
            android:text="C-dur"
            android:textSize="26dp" />

        <Button
            android:id="@+id/text_view_chord_2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/text_view_chord_1"
            android:background="@color/chordNeutral"
            android:text="C-dur"
            android:textSize="26dp" />

        <Button
            android:id="@+id/text_view_chord_3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_chord_1"
            android:layout_marginTop="36dp"
            android:layout_marginRight="8dp"
            android:background="@color/chordNeutral"
            android:text="C-dur"
            android:textSize="26dp" />

        <Button
            android:id="@+id/text_view_chord_4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_chord_2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@id/text_view_chord_3"
            android:background="@color/chordNeutral"
            android:text="C-dur"
            android:textSize="26dp" />


    </RelativeLayout>

</RelativeLayout>