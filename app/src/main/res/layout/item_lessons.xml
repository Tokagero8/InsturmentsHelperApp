<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_play_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Lesson X"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_play_difficulty"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_play_name"
        android:layout_toEndOf="@+id/text_view_play_name"
        android:layout_marginTop="2dp"
        android:text="Difficulty"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_view_progress_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/text_view_play_difficulty"
        android:layout_toEndOf="@+id/text_view_play_difficulty"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_view_best_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_view_progress_icon"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/image_view_progress_icon"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>