<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.lessons.LessonsChordFragment">

    <TextView
        android:id="@+id/text_view_chord_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/text_view_chord_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/text_view_chord_score"
        android:text="1:00"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text_view_chord_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_chord_score"
        android:layout_centerHorizontal="true"
        android:text="C major"
        android:textSize="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_chord_name"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_view_chord_1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginRight="8dp"
            android:background="@color/chordNeutral" />

        <ImageView
            android:id="@+id/image_view_chord_2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image_view_chord_1"
            android:background="@color/chordNeutral" />

        <ImageView
            android:id="@+id/image_view_chord_3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/image_view_chord_1"
            android:layout_marginTop="18dp"
            android:layout_marginRight="8dp"
            android:background="@color/chordNeutral" />

        <ImageView
            android:id="@+id/image_view_chord_4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/image_view_chord_2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/image_view_chord_3"
            android:background="@color/chordNeutral" />


    </RelativeLayout>

</RelativeLayout>