<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.chordbook.ChordsBookChordDetailFragment">

    <TextView
        android:id="@+id/text_view_chord_tone"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="X"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text_view_chord_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_chord_tone"
        android:gravity="center"
        android:text="@string/chords"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/image_view_chord"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_below="@+id/text_view_chord_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

</RelativeLayout>