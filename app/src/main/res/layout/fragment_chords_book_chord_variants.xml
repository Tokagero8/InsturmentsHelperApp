<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.chordbook.ChordsBookChordsVariantsFragment">

    <TextView
        android:id="@+id/text_view_chord_tone"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="X"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text_view_chords_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_chord_tone"
        android:gravity="center"
        android:text="@string/chords"
        android:textSize="30dp" />

    <GridView
        android:id="@+id/grid_view_chords_variants"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_chords_type"
        android:numColumns="2"
        android:verticalSpacing="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>